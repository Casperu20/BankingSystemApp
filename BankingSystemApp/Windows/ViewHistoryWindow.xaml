<Window x:Class="BankingSystemApp.ViewHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction History" Height="450" Width="650"
        WindowStartupLocation="CenterScreen" Background="#FFFDFDFD">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="📜 View Transaction History" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- IBAN input -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Account IBAN:" VerticalAlignment="Center" Width="100"/>
            <TextBox x:Name="IbanBox" Width="280" Margin="5,0,0,0"/>
            <Button Content="Search" Click="Search_Click" Width="80" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Output box -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="HistoryTextBox"
                     FontFamily="Consolas"
                     FontSize="14"
                     IsReadOnly="True"
                     TextWrapping="Wrap"/>
        </ScrollViewer>
    </Grid>
</Window>