<Window x:Class="BankingSystemApp.OpenAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Open Account" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" Background="#FFFDFDFD">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="🏦" FontSize="22" Margin="0,0,8,0"/>
            <TextBlock Text="Open a New Account" FontSize="20" FontWeight="Bold"/>
        </StackPanel>

        <!-- FORM -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0">
            <TextBlock Text="Account Holder:"/>
            <TextBox x:Name="HolderBox" />

            <TextBlock Text="Account Type:" Margin="0,10,0,0"/>
            <ComboBox x:Name="TypeBox">
                <ComboBoxItem Content="Personal"/>
                <ComboBoxItem Content="Company"/>
            </ComboBox>

            <TextBlock Text="Currency:" Margin="0,10,0,0"/>
            <ComboBox x:Name="CurrencyBox">
                <ComboBoxItem Content="EUR"/>
                <ComboBoxItem Content="USD"/>
                <ComboBoxItem Content="GBP"/>
                <ComboBoxItem Content="RON"/>
            </ComboBox>

            <TextBlock Text="Bank Name:" Margin="0,10,0,0"/>
            <TextBox x:Name="BankBox"/>

            <TextBlock Text="IBAN:" Margin="0,10,0,0"/>
            <TextBox x:Name="IbanBox"/>

            <Button Grid.Row="5"
                    Content=" Open Account"
                    Click="OpenAccount_Click"
                    Height="42"
                    Width="180"
                    HorizontalAlignment="Center"
                    Margin="0,25,0,0"
                    Background="#FF2B579A"
                    Foreground="White"
                    FontWeight="Bold"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
