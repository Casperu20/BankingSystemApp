<Window x:Class="BankingSystemApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🏦 Banking System App" Height="650" Width="950" Background="#f7f9fc">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>   <!-- Left menu -->
            <ColumnDefinition Width="*"/>     <!-- Right panel -->
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: MENU -->
        <StackPanel Grid.Column="0" Background="#e5ecf5" Margin="15">
            <TextBlock Text="Banking Operations" FontSize="20" FontWeight="Bold" 
                       Margin="0,0,0,20" Foreground="#2c3e50"/>

            <Button Content="➕ Add Bank" Click="AddBank_Click" Margin="0,5"/>
            <Button Content="🏦 Open Account" Click="OpenAccount_Click" Margin="0,5"/>
            <Button Content="💰 Deposit" Click="Deposit_Click" Margin="0,5"/>
            <Button Content="💸 Withdraw" Click="Withdraw_Click" Margin="0,5"/>
            <Button Content="🔁 Transfer" Click="Transfer_Click" Margin="0,5"/>
            <Button Content="📜 View Transaction History" Click="History_Click" Margin="0,5"/>
            <Button Content="💾 Save &amp; Exit" Click="Exit_Click" Margin="0,20"/>
        </StackPanel>

        <!-- RIGHT PANEL: CONTENT -->
        <Grid Grid.Column="1" Background="White" Margin="10" x:Name="RightContent">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />       <!-- For Welcome Text -->
                <RowDefinition Height="Auto" />    <!-- For Dashboard stats at bottom -->
            </Grid.RowDefinitions>

            <!-- CENTER WELCOME TEXT -->
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="🏦 Welcome to Banking System App"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#2B579A"
                           TextAlignment="Center"/>
                <TextBlock Text="Manage banks, accounts, and transactions easily."
                           FontSize="14"
                           Foreground="Gray"
                           TextAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>

            <!-- DASHBOARD AT BOTTOM -->
            <Border Grid.Row="1"
                    Margin="20,40,20,20"
                    Background="#f2f4f7"
                    Padding="15"
                    CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="📊 Dashboard Summary"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#2B579A"
                               Margin="0,0,0,10"/>

                    <TextBlock x:Name="TotalBanksText"
                               FontSize="15"
                               Text="🏦 Total Banks: -"
                               Margin="0,3,0,0"/>
                    <TextBlock x:Name="TotalAccountsText"
                               FontSize="15"
                               Text="👤 Total Accounts: -"
                               Margin="0,3,0,0"/>
                </StackPanel>
            </Border>

        </Grid>

    </Grid>
</Window>